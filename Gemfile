# Gemfile


source 'https://rubygems.org'

ruby '2.2.3'

# redis client interface
gem 'redis'
gem 'hiredis', '>= 0.6.0' 

# web tools
gem 'sinatra'
gem 'sinatra-contrib'
# evented server for sinatra
gem 'thin'

# lightweight unique ids
gem 'hashids'

# kafka client
gem 'poseidon'

# zookeeper client
gem 'zk'

# xml processing
gem 'nokogiri'

# interface for lmdb
gem 'moneta'
gem 'lmdb'


# process matrix parameters in URLs
gem 'rack-matrix_params'



